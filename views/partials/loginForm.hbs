<div class="d-flex justify-content-center align-items-center login my-4">
    <div class="bg-white w-100 p-3 p-sm-5 rounded-3 text-secondary shadow">
        <div class="d-flex justify-content-center align-items-center">
            <i class="fa-regular fa-circle-user fa-xl"></i>                    
            <div class="text-center fs-1 fw-bold ms-2">Ingresa a tu cuenta</div>
        </div>
        <form id="login-form" action="login-user" method="post">
            <div class="input-group mt-3">
                <div class="input-group-text bg-info">
                    <i class="fa-solid fa-user fa-lg"></i>
                </div>
                <input class="form-control bg-light p-3 fs-3" type="email" id="login-email" placeholder="Tu correo electrónico" name="username"/>
            </div>
            <div class="input-group my-4">
                <div class="input-group-text bg-info">
                    <i class="fa-solid fa-lock fa-lg"></i>
                </div>
                <input class="form-control bg-light p-3 fs-3" type="password" id="login-password" placeholder="Tu contraseña" name="password"/>
            </div>
            {{#if error}}
            <div class="w-50 bg-danger p-2 border-3 rounded mt-3 mx-auto text-center" id="msgError">
                <span class="text-light fw-bold fs-2">{{error}}</span>
            </div>
            {{/if}}

            <button class="btn btn-info text-white fs-3 w-100 mt-4 p-3 fw-semibold shadow-sm" id="btn-login" type="submit">Ingresar</button>
        </form>
        <div class="d-flex gap-1 justify-content-center mt-3">
            <div>¿Aún no tienes una cuenta?</div>
            <a href="/register" class="text-decoration-none text-info fw-semibold">Registrate</a>
        </div>
    </div>
</div>

{{#if validate}}
<script>
    document.querySelector('#login-form').addEventListener('submit', e => {
        e.preventDefault()
        loginSuccess()
    })
</script>
{{/if}}